pipeline {
    agent any
    stages {
        stage('build') {
            steps {
                sh './gradlew release'
            }
        }
        stage('copy'){
            steps{
                sh 'sudo scp /var/lib/jenkins/workspace/finalRelease/notesApp.jar root@167.99.137.234:/root/notesApp'
            }
        }
        notesApp.jar
        stage('deploy') {
            steps{
                sh 'sudo java -jar /var/lib/jenkins/workspace/finalRelease/notesApp.jar'
            }
        }
    }
}